{
	"name": "selery",
	"version": "0.0.7",
	"description": "A CSS selector parser",
	"main": "dist/selery-node.js",
	"module": "dist/selery-module.js",
	"browser": "dist/selery-browser.min.js",
	"source": "src/index.js",
	"files": [
		"dist/*",
		"src/*"
	],
	"scripts": {
		"test": "tape -r esm 'test/**/*.test.js'",
		"lint": "eslint '{src,test}/**/*.js'",
		"prep": "npm run build && npm run lint && npm run test",
		"preversion": "npm run prep",
		"prepublishOnly": "npm run prep",
		"build": "npm run build:node && npm run build:module && npm run build:modulemin && npm run build:browser && npm run build:browsermin",
		"build:node": "mkdir -p dist && esbuild --bundle --platform=node --outfile=dist/selery-node.js src/index.js",
		"build:module": "mkdir -p dist && esbuild --format=esm --outfile=dist/selery-module.js --bundle src/index.js",
		"build:modulemin": "mkdir -p dist && esbuild --format=esm --minify --outfile=dist/selery-module.min.js --bundle src/index.js",
		"build:browser": "mkdir -p dist && esbuild --bundle --outfile=dist/selery-browser.js --global-name=selery src/index.js",
		"build:browsermin": "mkdir -p dist && esbuild --bundle --minify --outfile=dist/selery-browser.min.js --global-name=selery src/index.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/danburzo/selery.git"
	},
	"keywords": [
		"css",
		"css-selectors",
		"parser"
	],
	"author": "Dan Burzo",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/danburzo/selery/issues"
	},
	"homepage": "https://github.com/danburzo/selery#readme",
	"devDependencies": {
		"esbuild": "^0.8.5",
		"eslint": "^7.13.0",
		"esm": "^3.2.25",
		"husky": "^4.3.0",
		"jsdom": "^16.4.0",
		"prettier": "2.1.2",
		"pretty-quick": "^3.1.0",
		"tape": "^5.0.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"sideEffects": false
}
