{
	"name": "selery",
	"version": "0.0.4",
	"description": "A CSS selector parser",
	"main": "dist/index.cjs.js",
	"module": "dist/index.es.js",
	"browser": "dist/index.iife.js",
	"source": "src/index.js",
	"files": [
		"dist/*",
		"src/*"
	],
	"scripts": {
		"test": "tape -r esm 'test/**/*.test.js'",
		"build": "npm run build:cjs && npm run build:es && npm run build:iife",
		"build:cjs": "mkdir -p dist && esbuild --bundle --platform=node --outfile=dist/index.cjs.js src/index.js",
		"build:es": "mkdir -p dist && esbuild --format=esm --outfile=dist/index.es.js --bundle src/index.js",
		"build:iife": "mkdir -p dist && esbuild --bundle --minify --outfile=dist/index.iife.js --global-name=selery src/index.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/danburzo/selery.git"
	},
	"keywords": [
		"css",
		"css-selectors",
		"parser"
	],
	"author": "Dan Burzo",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/danburzo/selery/issues"
	},
	"homepage": "https://github.com/danburzo/selery#readme",
	"devDependencies": {
		"esbuild": "^0.8.5",
		"esm": "^3.2.25",
		"husky": "^4.3.0",
		"jsdom": "^16.4.0",
		"prettier": "2.1.2",
		"pretty-quick": "^3.1.0",
		"tape": "^5.0.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"sideEffects": false
}
